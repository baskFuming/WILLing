<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <include layout="@layout/include_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_left_margin"
        android:paddingTop="@dimen/activity_Top_margin"
        android:paddingRight="@dimen/activity_right_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@mipmap/team_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_left_margin"
            android:paddingRight="@dimen/activity_right_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/total_vote_count"
                    android:textColor="#ffffffff"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/total_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/text_1"
                    android:text="------"
                    android:textColor="#ffffffff"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="bottom"
                    android:text="GVI"
                    android:textColor="#ffffffff"
                    android:textSize="17dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/total_vote_jackpot"
                    android:textColor="#ffffffff"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/total_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/text_2"
                    android:text="------"
                    android:textColor="#ffffffff"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="bottom"
                    android:text="GVI"
                    android:textColor="#ffffffff"
                    android:textSize="17dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/date_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/date_end_time"
                android:textColor="#ffffffff"
                android:textSize="11dp" />
        </LinearLayout>

        <include layout="@layout/include_recycler" />
    </LinearLayout>
</LinearLayout>