<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xxx.willing.ui.login.activity.ForgetLoginPswActivity">

    <include layout="@layout/include_title_bar" />

    <ImageView
        android:layout_width="166dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/login_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_edlt_phone" />

        <TextView
            android:id="@+id/forget_login_psw_selector_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/image1"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/login_select_phone"
            android:text="+86"
            android:textColor="#333333"
            android:textSize="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E5E5E5" />

        <EditText
            android:id="@+id/forget_login_psw_account_edit"
            style="@style/MainEditStyle"
            android:layout_toRightOf="@+id/forget_login_psw_selector_phone"
            android:background="@null"
            android:hint="@string/login_hint_account"
            android:inputType="phone"
            android:maxLength="20" />

        <ImageButton
            android:id="@+id/forget_login_psw_account_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@mipmap/edit_clean" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">

        <ImageView
            android:id="@+id/image21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_edit_code" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E5E5E5" />

        <EditText
            android:id="@+id/forget_login_psw_sms_code_edit"
            style="@style/MainEditStyle"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/image21"
            android:background="@null"
            android:digits="@string/password"
            android:hint="@string/forget_login_psw_hint_sms_code"
            android:inputType="phone"
            android:maxLength="6" />

        <TextView
            android:id="@+id/forget_login_psw_send_sms_code"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/forget_login_psw_send_sms_code"
            android:textColor="#3C7FFF"
            android:textSize="17dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_edit_password" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E5E5E5" />

        <EditText
            android:id="@+id/forget_login_psw_password_edit"
            style="@style/MainEditStyle"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/image3"
            android:background="@null"
            android:digits="@string/password"
            android:hint="@string/forget_login_psw_hint_password"
            android:inputType="phone"
            android:maxLength="20"
            android:singleLine="true" />

        <CheckBox
            android:id="@+id/forget_login_psw_password_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="16dp"
            android:button="@drawable/selector_password" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">

        <ImageView
            android:id="@+id/image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_edit_password" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E5E5E5" />

        <EditText
            android:id="@+id/forget_login_psw_password_again_edit"
            style="@style/MainEditStyle"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/image4"
            android:background="@null"
            android:digits="@string/password"
            android:hint="@string/forget_login_psw_hint_password_again"
            android:inputType="textPassword"
            android:maxLength="20" />

        <CheckBox
            android:id="@+id/forget_login_psw_password_again_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="16dp"
            android:button="@drawable/selector_password" />

    </RelativeLayout>

    <Button
        android:id="@+id/forget_login_psw_btn"
        style="@style/LoginButtonStyle"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:text="@string/forget_login_psw_btn" />

</LinearLayout>
