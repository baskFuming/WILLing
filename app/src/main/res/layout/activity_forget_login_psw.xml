<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xxx.willing.ui.login.activity.ForgetLoginPswActivity">

    <ImageButton
        android:id="@+id/forget_login_psw_return"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="111dp"
            android:layout_marginBottom="39dp"
            android:src="@mipmap/ic_launcher"
            android:textColor="#333333"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/forget_login_psw_selector_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:text="+86"

                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />

            <EditText
                android:id="@+id/forget_login_psw_account_edit"
                style="@style/MainEditStyle"
                android:layout_toRightOf="@+id/forget_login_psw_selector_phone"
                android:background="@null"
                android:hint="@string/forget_login_psw_hint_account"
                android:inputType="phone"
                android:maxLength="20" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />

            <EditText
                android:id="@+id/forget_login_psw_sms_code_edit"
                style="@style/MainEditStyle"
                android:background="@null"
                android:hint="@string/forget_login_psw_hint_sms_code"
                android:inputType="phone"
                android:maxLength="6" />

            <TextView
                android:id="@+id/forget_login_psw_send_sms_code"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/forget_login_psw_send_sms_code"

                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />

            <EditText
                android:id="@+id/forget_login_psw_password_edit"
                style="@style/MainEditStyle"
                android:background="@null"
                android:digits="@string/password"
                android:hint="@string/forget_login_psw_hint_password"
                android:inputType="textPassword"
                android:maxLength="20" />

            <CheckBox
                android:id="@+id/forget_login_psw_password_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:button="@drawable/selector_password" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#E5E5E5" />

            <EditText
                android:id="@+id/forget_login_psw_password_again_edit"
                style="@style/MainEditStyle"
                android:background="@null"
                android:digits="@string/password"
                android:hint="@string/forget_login_psw_hint_password_again"
                android:inputType="textPassword"
                android:maxLength="20" />

            <CheckBox
                android:id="@+id/forget_login_psw_password_again_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:button="@drawable/selector_password" />

        </RelativeLayout>

        <Button
            android:id="@+id/forget_login_psw_btn"
            style="@style/LoginButtonStyle"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_marginTop="44dp"
            android:text="@string/forget_login_psw_btn" />

    </LinearLayout>

</LinearLayout>
