<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".ui.my.activity.join.JoinApplyActivity"
    tools:ignore="ScrollViewSize,UselessLeaf">

    <include layout="@layout/include_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#fffe3848"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="@string/apply_name"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/ed_join_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/ed_bg"
                    android:hint="@string/ed_hint_1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ff333333"
                    android:textColorHint="#ff999999"
                    android:textSize="14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#fffe3848"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="@string/apply_brand"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/ed_join_rand_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/ed_bg">

                    <TextView
                        android:id="@+id/ed_join_rand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/ed_hint_2"
                        android:textColor="#ff333333"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/down_bg" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#fffe3848"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="@string/apply_time"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/ed_join_time_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/ed_bg">

                    <TextView
                        android:id="@+id/ed_join_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/ed_hint_3"
                        android:textColor="#ff333333"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_down_2"
                        android:layout_width="14dp"
                        android:layout_height="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/down_bg" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#fffe3848"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="@string/apply_adderss"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/re_click_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="57.5dp">

                    <TextView
                        android:id="@+id/ed_join_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/ed_hint_4"
                        android:textColor="#ff999999"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_down_3"
                        android:layout_width="6dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/my_right_back" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#fffe3848"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="@string/apply_lines"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/ed_join_lines"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="37dp"
                    android:background="@mipmap/ed_bg"
                    android:hint="@string/ed_hint_5"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ff333333"
                    android:textColorHint="#ff999999"
                    android:textSize="14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#fffe3848"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:text="@string/apply_node"
                        android:textColor="#ff333333"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:background="@mipmap/ed_bg"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ed_join_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="@string/ed_hint_6"
                        android:maxLength="500"
                        android:padding="10dp"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="14dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ed_join_ed_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:text="0/500"
                    android:textColor="#ff999999"
                    android:textSize="12dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#EFEFEF" />

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:descendantFocusability="blocksDescendants">-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/team_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!--</RelativeLayout>-->

            <TextView
                android:id="@+id/ed_create_click"
                android:layout_width="382dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:background="@drawable/creat_btn_bg"
                android:gravity="center"
                android:text="@string/apply_create_mess"
                android:textColor="#666666"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:id="@+id/re_trans_photo_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="@string/apply_trans_photo"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ed_join_trans_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/ed_hint_10"
                    android:textColor="#ff999999"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#EFEFEF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ed_check"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:button="@drawable/selector_vote_check"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/ed_agree"
                    android:textColor="#ff999999"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/ed_agree_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/ed_agree_web"
                    android:textColor="#3C7FFF"
                    android:textSize="12dp" />
            </LinearLayout>

            <Button
                android:id="@+id/ed_submit"
                style="@style/LoginButtonStyle"
                android:layout_width="262dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginBottom="54dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/feed_back_btn" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>