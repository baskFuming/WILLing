<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    tools:context="com.xxx.willing.ui.login.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <include layout="@layout/include_title_bar" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:text="@string/register_btn"
            android:textColor="#666666"
            android:textSize="14dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="166dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/login_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_edlt_phone" />

        <TextView
            android:id="@+id/login_selector_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/image1"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/login_select_phone"
            android:text="+86"
            android:textColor="#333333"
            android:textSize="17dp" />


        <View style="@style/dividingLineBottom" />

        <EditText
            android:id="@+id/login_account_edit"
            style="@style/EditInputPhoneStyle"
            android:layout_toRightOf="@+id/login_selector_phone" />

        <ImageButton
            android:id="@+id/login_account_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@mipmap/edit_clean" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_edit_password" />

        <View style="@style/dividingLineBottom" />

        <EditText
            android:id="@+id/login_password_edit"
            style="@style/EditInputPswStyle"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/image3" />

        <CheckBox
            android:id="@+id/login_password_eye"
            style="@style/CheckPasswordStyle" />

    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        style="@style/LoginButtonStyle"
        android:layout_width="347dp"
        android:layout_height="49dp"
        android:layout_marginTop="50dp"
        android:text="@string/login_btn" />

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/login_forger_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/forget_btn"
            android:textColor="#333333"
            android:textSize="14dp" />

    </RelativeLayout>

</LinearLayout>
