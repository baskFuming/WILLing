<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.xxx.willing.ui.main.MainActivity">

    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/main_vote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_vote_image"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/main_vote_default" />

                <TextView
                    android:id="@+id/main_vote_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/main_vote"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_app"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_app_image"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/main_app_default" />

                <TextView
                    android:id="@+id/main_app_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/main_app"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_wallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_wallet_image"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/main_wallet_default" />

                <TextView
                    android:id="@+id/main_wallet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/main_wallet"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_my_image"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/main_my_default" />

                <TextView
                    android:id="@+id/main_my_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/main_my"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_1" />

</RelativeLayout>