<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context=".ui.login.activity.ModifyLoginPswActivity">

    <include layout="@layout/include_title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEBEC"
        android:paddingBottom="13dp"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:text="@string/modify_pwd"
        android:textColor="#fffe3848"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <View style="@style/dividingLineBottom" />

        <EditText
            android:id="@+id/modify_login_psw_sms_code_edit"
            style="@style/EditInputSMSCodeStyle" />

        <TextView
            android:id="@+id/modify_login_psw_send_sms_code"
            style="@style/BtnInputSMSCodeStyle" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <View style="@style/dividingLineBottom" />

        <EditText
            android:id="@+id/modify_login_psw_old_password_edit"
            style="@style/EditInputOldPswStyle" />

        <CheckBox
            android:id="@+id/modify_login_psw_old_password_eye"
            style="@style/CheckPasswordStyle" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <View style="@style/dividingLineBottom" />

        <EditText
            android:id="@+id/modify_login_psw_new_password_edit"
            style="@style/EditInputNewPswStyle" />

        <CheckBox
            android:id="@+id/modify_login_psw_new_password_eye"
            style="@style/CheckPasswordStyle" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <View style="@style/dividingLineBottom" />

        <EditText
            android:id="@+id/modify_login_psw_new_password_again_edit"
            style="@style/EditInputNewPswAgainStyle" />

        <CheckBox
            android:id="@+id/modify_login_psw_new_password_again_eye"
            style="@style/CheckPasswordStyle" />

        <ImageView
            android:id="@+id/img_edit_cancel"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/modify_login_psw_new_password_again_eye"
            android:src="@mipmap/edit_cancel" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/enter_pwd"
        android:textColor="#fffe3848"
        android:textSize="12dp" />

    <Button
        android:id="@+id/modify_login_psw_btn"
        style="@style/ButtonStyle"
        android:layout_width="262dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:text="@string/btn_confirm" />

</LinearLayout>
