<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.xxx.willing.ui.login.activity.PasswordSettingActivity">

    <include layout="@layout/include_title_bar" />

    <RelativeLayout
        android:id="@+id/password_setting_modify_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingEnd="17dp"
        android:paddingStart="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:text="@string/password_setting_modify_login"
            android:textColor="#333333"
            android:textSize="15dp" />

        <ImageView style="@style/rightFlag" />

        <View style="@style/dividingLineBottom" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_setting_modify_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingEnd="17dp"
        android:paddingStart="17dp">

        <TextView
            android:id="@+id/password_setting_pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:text="@string/password_setting_modify_pay"
            android:textColor="#333333"
            android:textSize="15dp" />

        <ImageView style="@style/rightFlag" />

        <View style="@style/dividingLineBottom" />

    </RelativeLayout>

</LinearLayout>