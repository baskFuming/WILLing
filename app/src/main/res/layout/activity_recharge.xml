<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context=".ui.wallet.activity.RechargeActivity">

    <include layout="@layout/include_title_bar" />

    <TextView
        android:id="@+id/recharge_toast"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#22FE3848"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/recharge_toast"
        android:textColor="#FE3848"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recharge_image"
            android:layout_width="@dimen/zxCode_size"
            android:layout_height="@dimen/zxCode_size"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/recharge_toast1"
            android:textColor="#333333"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/recharge_copy"
            android:layout_width="278dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_back_wallet_coin_detail"
            android:paddingEnd="15dp"
            android:paddingStart="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:src="@mipmap/copy" />

            <TextView
                android:id="@+id/recharge_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="********"
                android:textColor="#666666"
                android:textSize="12dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/recharge_btn"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_btn"
            android:gravity="center"
            android:text="@string/recharge_btn"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

    </LinearLayout>


</LinearLayout>
