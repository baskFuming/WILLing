<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context=".ui.my.activity.join.UpdateCardActivity">

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="43dp"
            android:paddingStart="43dp">

            <LinearLayout
                android:id="@+id/li_card_front"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_marginTop="22dp"
                android:background="@mipmap/positive_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_card_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/crad_photo" />

                <TextView
                    android:id="@+id/tv_card_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/card_positive"
                    android:textColor="#ff333333"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_card_back"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@mipmap/reverse_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_card_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/crad_photo" />

                <TextView
                    android:id="@+id/tv_card_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/card_reverse"
                    android:textColor="#ff333333"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_hold_card"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@mipmap/hand_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hold_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/crad_photo" />

                <TextView
                    android:id="@+id/tv_hold_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/card_hand"
                    android:textColor="#ff333333"
                    android:textSize="17dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="@style/LoginButtonStyle"
                android:layout_width="262dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/btn_save" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>