<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_my_refresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.xxx.willing.ui.my.MyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="265.5dp"
            android:background="@mipmap/my_background">

            <LinearLayout
                android:id="@+id/account_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:background="@mipmap/my_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16.5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-----"
                            android:textColor="#ffffffff"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_level"
                            android:layout_width="23dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="11dp"
                            android:src="@mipmap/level_0" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="-----"
                        android:textColor="#ffffffff"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/invite_friend"
                android:layout_width="98dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape_invite_bg"
                android:gravity="center"
                android:text="@string/invite_friend_title"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_sign"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/sign" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="204dp"
            android:background="@drawable/shape_back_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re_my_vote"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/my_img_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/image_1"
                    android:text="@string/my_vote"
                    android:textColor="#ff333333"
                    android:textSize="13dp" />

                <ImageView style="@style/rightFlag" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF" />

            <RelativeLayout
                android:id="@+id/re_my_team"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/my_img_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/image_2"
                    android:text="@string/my_team"
                    android:textColor="#ff333333"
                    android:textSize="13dp" />

                <ImageView style="@style/rightFlag" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF" />

            <RelativeLayout
                android:id="@+id/re_my_join"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/my_img_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@+id/image_3"
                    android:text="@string/my_join"
                    android:textColor="#ff333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/submit_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:text="@string/my_submitted_review"
                    android:layout_alignParentRight="true"
                    android:textColor="#ff999999"
                    android:textSize="13dp" />

                <ImageView style="@style/rightFlag" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF" />

            <RelativeLayout
                android:id="@+id/re_my_money"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/image_4"
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/my_img_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@id/image_4"
                    android:text="@string/my_money"
                    android:textColor="#ff333333"
                    android:textSize="13dp" />

                <ImageView style="@style/rightFlag" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF" />

            <RelativeLayout
                android:id="@+id/re_my_account_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/image_5"
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/my_img_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_toRightOf="@id/image_5"
                    android:text="@string/my_account"
                    android:textColor="#ff333333"
                    android:textSize="13dp" />

                <ImageView style="@style/rightFlag" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
