<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.vote.VoteFragment">

    <com.youth.banner.Banner
        android:id="@+id/vote_banner"
        android:layout_width="match_parent"
        android:layout_height="184dp" />

    <RelativeLayout
        android:id="@+id/vote_relative"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_back_vote_notice">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.5dp"
            android:src="@mipmap/vote_notice" />

        <TextView
            android:id="@+id/vote_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:textColor="#BB3C7FFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/vote_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="48dp"
            android:layout_toLeftOf="@id/vote_time"
            android:layout_toRightOf="@id/image1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#3C7FFF"
            android:textSize="14dp" />

    </RelativeLayout>

    <com.xxx.willing.view.TabLayout
        android:id="@+id/vote_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#3C7FFF"
        app:tabTextColor="#666666" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" />

    <FrameLayout
        android:id="@+id/vote_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>