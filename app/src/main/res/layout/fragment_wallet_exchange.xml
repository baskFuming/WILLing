<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.wallet.fragment.WalletExchangeFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/main_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/wallet_exchange_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/wallet_exchange_rate"
                    android:textColor="#666666"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/wallet_exchange_record"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_back_wallet_exchange"
                    android:gravity="center"
                    android:text="@string/wallet_exchange_record"
                    android:textColor="#FEFEFE"
                    android:textSize="11dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/wallet_exchange_base_linear"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/shape_edit_wallet_exchange"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/wallet_exchange_base_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="11dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/wallet_exchange_base_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="--"
                            android:textColor="#999999"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/wallet_exchange_base_amount"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_edit_wallet_exchange"
                        android:hint="@string/wallet_exchange_base_amount"
                        android:inputType="numberDecimal"
                        android:maxLines="20"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:textSize="14dp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/wallet_exchange_change"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:src="@mipmap/wallet_exchange_change" />

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/wallet_exchange_target_linear"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/shape_edit_wallet_exchange"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/wallet_exchange_target_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="11dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/wallet_exchange_target_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="--"
                            android:textColor="#999999"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/wallet_exchange_target_amount"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_edit_wallet_exchange"
                        android:gravity="center_vertical"
                        android:hint="@string/wallet_exchange_target_amount"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/wallet_exchange_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:text="@string/wallet_exchange_fee"
                android:textColor="#666666"
                android:textSize="14dp" />

            <Button
                android:id="@+id/wallet_exchange_btn"
                style="@style/ButtonStyle"
                android:layout_width="228dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/wallet_exchange_btn"
                android:textColor="#FFFFFF"
                android:textSize="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:text="@string/wallet_exchange_toast"
                android:textColor="#333333"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/wallet_exchange_toast1"
                android:textColor="#666666"
                android:textSize="14dp" />

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>