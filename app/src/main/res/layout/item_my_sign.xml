<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_my_sign_icon"
        android:layout_width="21dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_my_sign_icon"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/item_my_sign_left"
            android:layout_width="17dp"
            android:layout_height="2dp" />

        <View
            android:id="@+id/item_my_sign_status"
            android:layout_width="14dp"
            android:layout_height="14dp" />

        <View
            android:id="@+id/item_my_sign_today_status"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <View
            android:id="@+id/item_my_sign_right"
            android:layout_width="17dp"
            android:layout_height="2dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_my_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_my_sign_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="--"
        android:textColor="#333333"
        android:textSize="9dp" />

</RelativeLayout>