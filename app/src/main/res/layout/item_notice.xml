<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/shape_back_item"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------"
        android:textColor="#ff333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:paddingBottom="@dimen/activity_Top_margin"
        android:paddingTop="@dimen/activity_Top_margin"
        android:text="--------"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:text="--------"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/item_notice_center_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/notice_img"
            android:button="@null"
            android:text="@string/to_view_content"
            android:textColor="#333333"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/notice_img"
            android:layout_width="12dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/vote_down" />


    </RelativeLayout>

</LinearLayout>