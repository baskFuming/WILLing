<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@drawable/shape_back_item"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="130dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/shape_vote_item_bg"
            >

            <ImageView
                android:id="@+id/item_vote_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_vote_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#ff333333"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/item_vote_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#ff666666"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/votes"
                    android:textColor="#ff999999"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/item_vote_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/textview1"
                    android:text="@string/item_vote_number"
                    android:textColor="#686868"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/item_vote_btn"
                    android:layout_width="66dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_btn_item_vote"
                    android:gravity="center"
                    android:text="@string/vote_btn"
                    android:textColor="#ffffffff"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="@string/vote_end"
                    android:textColor="#fffe3848"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_vote_time_h"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_item_vote_time"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=":"
                        android:textColor="#FFFE3848" />

                    <TextView
                        android:id="@+id/item_vote_time_m"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_item_vote_time"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=":"
                        android:textColor="#FFFE3848" />

                    <TextView
                        android:id="@+id/item_vote_time_s"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_item_vote_time"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_vote_status"
        android:layout_width="66dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="14dp" />


</RelativeLayout>