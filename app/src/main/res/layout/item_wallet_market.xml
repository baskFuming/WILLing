<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_wallet_market_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_wallet_market_position"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="00"
            android:textColor="#999999"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/linear_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wallet_market_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#333333"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/item_wallet_market_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="---"
            android:textColor="#999999"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@id/linear_2"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wallet_market_usa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.0"
            android:textColor="#999999"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_wallet_market_rmb"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="ï¿¥0.0"
            android:textColor="#333333"
            android:textSize="21dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_wallet_market_rate"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_item_wallet_default"
        android:gravity="center"
        android:text="0.00%"
        android:textColor="#FFFFFF"
        android:textSize="19dp" />

</RelativeLayout>