<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_line_bg"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/window_cancel_true"
            android:textColor="#ff333333"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/window_confirm_cancel"
                android:layout_width="112dp"
                android:layout_height="34dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_cancle_order_pop"
                android:gravity="center"
                android:text="@string/window_confirm_cancel"
                android:textColor="#ffffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/window_pay_order"
                android:layout_width="112dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/shap_order_read"
                android:gravity="center"
                android:text="@string/order_cancel_pay_btn"
                android:textColor="#ffffffff"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>