<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_left_margin"
    android:paddingRight="@dimen/activity_right_margin"
    android:paddingTop="25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_img"
            android:layout_gravity="center"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@mipmap/my_icon"/>
        <LinearLayout
            android:paddingLeft="@dimen/activity_left_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/job_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textColor="#ff333333"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/job_name"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textColor="#ff333333"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_text"
                    android:textColor="#ff333333"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/job_content"
                android:layout_marginTop="13dp"
                android:layout_width="286dp"
                android:layout_height="35dp"
                android:text="---"
                android:textColor="#ff666666"
                android:textSize="14dp"
                />
            <View
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EFEFEF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>