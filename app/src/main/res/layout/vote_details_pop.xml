<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/window_dis"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/close_bg" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/window_dis"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/shape_sign_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/window_vote_user_img"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/true_bg" />

            <TextView
                android:id="@+id/window_vote_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="-------"
                android:textColor="#ff333333"
                android:textSize="17dp"
                />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/window_vote_user_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------"
                android:textColor="#ff333333"
                android:textSize="17dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>