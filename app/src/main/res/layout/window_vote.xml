<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_back_window"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <ImageButton
            android:id="@+id/window_vote_return"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:src="@mipmap/window_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/window_vote_title"
            android:textSize="20dp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/window_vote_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_edit_window"
        android:hint="@string/window_vote_edit"
        android:inputType="phone"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textSize="14dp" />

    <Button
        android:id="@+id/window_vote_btn"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_margin="25dp"
        android:background="@drawable/selector_btn"
        android:text="@string/window_vote_btn"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="19dp" />

</LinearLayout>