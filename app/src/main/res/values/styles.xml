<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="TestTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 正式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- 闪屏 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/anim_splash</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--PopupWindow进出场动画-->
    <style name="showPopupAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/anim_popup_out</item>
        <item name="android:windowEnterAnimation">@anim/anim_popup_in</item>
    </style>

    <!-- 按钮样式 -->
    <style name="ButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 输入框样式 -->
    <style name="MainEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- 登陆按钮样式 -->
    <style name="LoginButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_login_btn</item>
        <item name="android:textColor">@color/colorTextColorBtn</item>
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--倒计时-->
    <style name="SnapUpViewColon" parent="SnapUpView">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">:</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RushBuyCountDownTimerViewStyleRed" parent="RushBuyCountDownTimerViewStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SnapUpView">
        <!--//改变控件大小-->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RushBuyCountDownTimerViewStyle" parent="SnapUpView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
