<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="TestTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 正式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- 闪屏 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/anim_splash</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--PopupWindow进出场动画-->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/anim_popup_out</item>
        <item name="android:windowEnterAnimation">@anim/anim_popup_in</item>
    </style>

    <!-- 分割线 -->
    <style name="dividingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E5E5E5</item>
    </style>

    <!-- 分割线底部 -->
    <style name="dividingLineBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E5E5E5</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- 右侧标记 -->
    <style name="rightFlag">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@mipmap/my_right_back</item>
    </style>

    <!-- 按钮样式 -->
    <style name="ButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 输入框样式 -->
    <style name="MainEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
